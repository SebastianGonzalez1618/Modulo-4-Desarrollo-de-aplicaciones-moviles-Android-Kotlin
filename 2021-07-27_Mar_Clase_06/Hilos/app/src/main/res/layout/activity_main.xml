<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="@string/tv_contador_encabezado"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bt_iniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_iniciar" />

        <Button
            android:id="@+id/bt_pausar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_pausar" />

        <Button
            android:id="@+id/bt_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_continuar" />

        <Button
            android:id="@+id/bt_reiniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_reiniciar" />

        <Button
            android:id="@+id/bt_detener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_detener" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>